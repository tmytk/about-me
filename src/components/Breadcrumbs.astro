---
const { items = [] } = Astro.props;
---

<nav class="breadcrumbs" aria-label="Breadcrumb">
    <ol>
        {items.map((item, i) => (
            <li class="crumb">
                {item.href ? <a href={item.href}>{item.label}</a> : <span>{item.label}</span>}
                {i < items.length - 1 ? <span class="sep">/</span> : null}
            </li>
        ))}
    </ol>
</nav>

<style>
    .breadcrumbs ol {
        display: flex;
        flex-wrap: wrap;
        gap: 0;
        font-size: 14px;
        color: #3d3d3d;
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .breadcrumbs {
        margin-bottom: 2px;
    }

    .breadcrumbs li {
        display: inline-flex;
        align-items: center;
        gap: 0;
    }

    .breadcrumbs a {
        color: #2d5aa6;
        text-decoration: none;
    }

    .breadcrumbs a:hover {
        text-decoration: underline;
        text-decoration-thickness: 1px;
        text-underline-offset: 2px;
    }

    .sep {
        color: #8a8a8a;
    }
</style>
